{
  "name": "artik-ide",
  "version": "1.3.1-SNAPSHOT",
  "description": "Artik IDE Desktop",
  "main": "./app/main.js",
  "author": "",
  "license": "EPL-1.0",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "npm run clean",
    "dist": "npm run compile && node_modules/.bin/build -lwm --x64",
    "dist-win" : "npm run compile && node_modules/.bin/build -w --x64",
    "dist-mac" : "npm run compile && node_modules/.bin/build -m --x64",
    "dist-linux" : "npm run compile && node_modules/.bin/build -l --x64",
    "postinstall": "install-app-deps",
    "start": "node_modules/.bin/electron ./app"
  },
  "build": {
    "appId": "org.eclipse.che",
    "category": "ide",
    "mac":{
      "target": [
        "zip"
      ]
    },
    "linux": {
      "target": [
        "zip"
      ]
    },
    "win": {
      "target": "zip"
    }
  },
  "dependencies": {
  },
  "devDependencies": {
    "electron": "1.5.0",
    "electron-builder": "11.5.1",
    "gulp": "^3.9.1",
    "rimraf": "^2.5.4"
  }
}
