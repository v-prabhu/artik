artik:
  image: <%= ENV["IMAGE_ARTIK"] %>
  env_file:
<% if @compose_file_for_containers == true -%>
    - '/data/instance/config/artik.env'
<% else -%>
    - '<%= ENV["ARTIK_ENV_FILE"] %>'
<% end -%>
  volumes:
    - '/var/run/docker.sock:/var/run/docker.sock'
    - '<%= scope.lookupvar('artik::che_instance') -%>/data:/data'
    - '<%= scope.lookupvar('artik::che_instance') -%>/logs:/logs'
    - '<%= scope.lookupvar('artik::che_instance') -%>/config:/conf'
<% if scope.lookupvar('artik::che_env') != 'production' -%>
    - '<%= scope.lookupvar('artik::che_assembly') -%>:/assembly'
<% end -%>
  ports:
    - '<%= scope.lookupvar('artik::che_port') -%>:8080'
<% if scope.lookupvar('artik::che_env') != 'production' -%>
    - '8000:8000'
<% end -%>
  restart: always
  container_name: artik